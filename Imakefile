XCOMM

XCOMM Source files from which blackbox is built

Includes :=		Basemenu.hh Clientmenu.hh LinkedList.hh Rootmenu.hh Windowmenu.hh Workspace.hh WorkspaceManager.hh Workspacemenu.hh blackbox.hh graphics.hh icon.hh window.hh
Sources :=		Basemenu.cc Clientmenu.cc LinkedList.cc Rootmenu.cc Windowmenu.cc Workspace.cc WorkspaceManager.cc Workspacemenu.cc blackbox.cc graphics.cc icon.cc main.cc window.cc
Objects :=		Basemenu.o  Clientmenu.o  LinkedList.o  Rootmenu.o  Windowmenu.o  Workspace.o  WorkspaceManager.o  Workspacemenu.o  blackbox.o graphics.o icon.o main.o window.o

DefaultsPath :=		-DXAPPLOADDIR=\"$(XAPPLOADDIR)\"
Libraries :=		$(XLIB) $(EXTENSIONLIB)
OtherLibs :=		

#ifdef SupportShapeExtension
CXXFLAGS :=	$(CXXFLAGS) -DSHAPE
#endif
CXXFLAGS :=	-Wall -W $(CXXFLAGS)

PROGRAMS := blackbox
SRCS1 := $(Sources)
OBJS1 := $(Objects)
ComplexCplusplusProgramTarget_1(blackbox, $(Libraries), $(OtherLibs))
InstallNonExecFile(Blackbox.ad, $(XAPPLOADDIR))
InstallNonExecFile(BlackboxMenu.ad, $(XAPPLOADDIR))

blackbox.o: blackbox.cc
	$(CXX) $(CXXFLAGS) $(DefaultsPath) -c -o $@ $<
